{
  "name": "gto_prompt_validation",
  "description": "Validate GTO guidance impact on decision quality - compare baseline, GTO-only, GTO+personality, and minimal prompts",
  "hypothesis": "GTO guidance reduces fold mistakes and bad calls without hurting other decisions; GTO+personality provides best balance",
  "tags": ["gto", "validation", "baseline", "decision_quality"],
  "num_tournaments": 10,
  "hands_per_tournament": 50,
  "reset_on_elimination": true,
  "random_seed": 40746660,
  "num_players": 4,
  "starting_stack": 2000,
  "big_blind": 40,
  "model": "gpt-5-nano",
  "provider": "openai",
  "parallel_tournaments": 4,
  "stagger_start_delay": 2.0,
  "capture_prompts": true,
  "control": {
    "label": "Baseline (No GTO)",
    "description": "Current system - full personality, no GTO guidance",
    "prompt_config": {
      "show_equity_always": false,
      "show_equity_verdict": false,
      "situational_guidance": true,
      "pot_odds": true,
      "hand_strength": true,
      "session_memory": true,
      "opponent_intel": true,
      "chattiness": true,
      "emotional_state": true,
      "tilt_effects": true,
      "mind_games": true,
      "persona_response": true
    }
  },
  "variants": [
    {
      "label": "GTO-Only (No Personality)",
      "description": "Pure math guidance, personality disabled",
      "prompt_config": {
        "show_equity_always": true,
        "show_equity_verdict": true,
        "situational_guidance": true,
        "pot_odds": true,
        "hand_strength": true,
        "session_memory": false,
        "opponent_intel": false,
        "chattiness": false,
        "emotional_state": false,
        "tilt_effects": false,
        "mind_games": false,
        "persona_response": false
      }
    },
    {
      "label": "GTO + Full Personality",
      "description": "GTO guidance with full personality system",
      "prompt_config": {
        "show_equity_always": true,
        "show_equity_verdict": true,
        "situational_guidance": true,
        "pot_odds": true,
        "hand_strength": true,
        "session_memory": true,
        "opponent_intel": true,
        "chattiness": true,
        "emotional_state": true,
        "tilt_effects": true,
        "mind_games": true,
        "persona_response": true
      }
    },
    {
      "label": "Minimal Prompt",
      "description": "Stripped down to bare game state only",
      "prompt_config": {
        "use_minimal_prompt": true
      }
    }
  ]
}
