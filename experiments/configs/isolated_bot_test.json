{
  "name": "isolated_bot_exploitation",
  "description": "Test 3 AI players against a single rule-based bot per variant to measure exploitation",
  "hypothesis": "AI players should exploit predictable bots - fold_bot loses blinds, call_station pays off value bets",
  "num_tournaments": 1,
  "hands_per_tournament": 30,
  "num_players": 4,
  "starting_stack": 5000,
  "big_blind": 100,
  "model": "gpt-5-nano",
  "provider": "openai",
  "parallel_tournaments": 3,
  "stagger_start_delay": 1.0,
  "control": {
    "label": "vs FoldBot",
    "personalities": ["Batman", "Tyler Durden", "Gordon Ramsay", "FoldBot"],
    "player_types": {
      "FoldBot": {"type": "rule_bot", "strategy": "always_fold"}
    }
  },
  "variants": [
    {
      "label": "vs CallStation",
      "personalities": ["Batman", "Tyler Durden", "Gordon Ramsay", "CallStation"],
      "player_types": {
        "CallStation": {"type": "rule_bot", "strategy": "always_call"}
      }
    },
    {
      "label": "vs AlwaysRaise",
      "personalities": ["Batman", "Tyler Durden", "Gordon Ramsay", "RaiseBot"],
      "player_types": {
        "RaiseBot": {"type": "rule_bot", "strategy": "always_raise"}
      }
    }
  ],
  "capture_prompts": true
}
