{
  "name": "baseline_gto_range_comparison",
  "description": "Compare baseline GTO with enhanced range estimation vs VPIP-only ranges. Uses reset_on_elimination for exact hand counts.",
  "hypothesis": "Enhanced ranges with PFR and action context produce fewer bad all-ins and fold mistakes than VPIP-only estimation",
  "tags": ["ranges", "gto", "quality", "baseline"],
  "num_tournaments": 10,
  "hands_per_tournament": 40,
  "reset_on_elimination": true,
  "num_players": 4,
  "starting_stack": 2000,
  "big_blind": 40,
  "model": "gpt-5-nano",
  "provider": "openai",
  "parallel_tournaments": 4,
  "stagger_start_delay": 2.0,
  "capture_prompts": true,
  "random_seed": 12345,
  "control": {
    "label": "Enhanced-Ranges",
    "description": "GTO baseline with PFR, action context, and aggression-adjusted range estimation",
    "prompt_config": {
      "use_minimal_prompt": false,
      "pot_odds": true,
      "hand_strength": true,
      "show_equity_always": true,
      "show_equity_verdict": true,
      "situational_guidance": true,
      "use_enhanced_ranges": true,
      "session_memory": false,
      "opponent_intel": false,
      "strategic_reflection": false,
      "chattiness": false,
      "emotional_state": false,
      "tilt_effects": false,
      "mind_games": false,
      "persona_response": false
    }
  },
  "variants": [
    {
      "label": "VPIP-Only-Ranges",
      "description": "GTO baseline with original VPIP-only range estimation",
      "prompt_config": {
        "use_minimal_prompt": false,
        "pot_odds": true,
        "hand_strength": true,
        "show_equity_always": true,
        "show_equity_verdict": true,
        "situational_guidance": true,
        "use_enhanced_ranges": false,
        "session_memory": false,
        "opponent_intel": false,
        "strategic_reflection": false,
        "chattiness": false,
        "emotional_state": false,
        "tilt_effects": false,
        "mind_games": false,
        "persona_response": false
      }
    }
  ]
}
