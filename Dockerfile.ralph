FROM node:20-slim

# System dependencies
RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-venv gcc curl git \
    && rm -rf /var/lib/apt/lists/*

# Claude Code CLI
RUN npm install -g @anthropic-ai/claude-code

# Python dependencies
WORKDIR /app
COPY requirements.txt .
RUN pip3 install --break-system-packages --no-cache-dir -r requirements.txt

# Use existing node user (UID 1000) â€” matches host user for volume permissions
# Configure git for the node user
RUN su node -c 'git config --global user.email "ralph@wiggum.bot" && \
    git config --global user.name "Ralph Wiggum" && \
    git config --global --add safe.directory /app'

USER node
WORKDIR /app
CMD ["bash"]
